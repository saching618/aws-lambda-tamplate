{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2017",
    "outDir": "lib",
    "strict": true,
    "typeRoots": [
			"node_modules/@types"
    ],
		"esModuleInterop": true,
    "sourceMap": true
  },
  "exclude": ["node_modules"]
}
